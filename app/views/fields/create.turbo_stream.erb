<%= turbo_stream.replace target="flash", partial: "layouts/flash" %>

<%= turbo_stream.replace target="filter" do %>
  <%= content_tag :div, id: "filter" do %>
    <%= render partial: "todos/filter", locals: { filter: @filter, todo: @todo, collections: @collections } %>
  <% end %>
<% end %>

<%= turbo_stream.replace target="new_item" do %>
  <%= turbo_frame_tag "new_item", src: new_todo_item_path(@todo) %>
<% end %>